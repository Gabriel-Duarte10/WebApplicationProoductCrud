@model IEnumerable<WebApplicationProoductCrud.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Manufacturer name
            </th>
            <th>
                Category
            </th>
            <th>
                Qtd
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFabri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueProd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<table class="table">
    <tbody>
        <tr>
            <th>
                Total:
            </th>
            <td></td>
            <td></td>
            
            <th style="text-align:end">
                @ViewData["Qtd_Total"]
            </th>
            <th style="text-align:start">
                @ViewData["Price_Total"]
            </th>

        </tr>
    </tbody>
</table>